  <script>
    // ------- DADOS EM MEMÓRIA / LOCALSTORAGE -------
    let equipamentos = [];
    let movimentacoes = [];

    function carregarDados() {
      const eq = localStorage.getItem("equipamentos");
      const mv = localStorage.getItem("movimentacoes");
      equipamentos = eq ? JSON.parse(eq) : [];
      movimentacoes = mv ? JSON.parse(mv) : [];
    }

    function salvarDados() {
      localStorage.setItem("equipamentos", JSON.stringify(equipamentos));
      localStorage.setItem("movimentacoes", JSON.stringify(movimentacoes));
    }

    // ------- UI / RENDERIZAÇÃO -------
    function atualizarDashboard() {
      const total = equipamentos.length;
      const disponiveis = equipamentos.filter(e => e.status === "disponivel").length;
      const emprestados = equipamentos.filter(e => e.status === "emprestado").length;

      document.getElementById("totalEquip").textContent = total;
      document.getElementById("totalDisp").textContent = disponiveis;
      document.getElementById("totalEmp").textContent = emprestados;
    }

    function renderTabelaEquip() {
      const tbody = document.querySelector("#tabelaEquip tbody");
      tbody.innerHTML = "";
      equipamentos.forEach(e => {
        const tr = document.createElement("tr");
        tr.innerHTML = `
          <td>${e.nome}</td>
          <td>${e.serie}</td>
          <td>${e.categoria || "-"}</td>
          <td>${e.local || "-"}</td>
          <td>
            <span class="${e.status === "disponivel" ? "status-disponivel" : "status-emprestado"}">
              ${e.status === "disponivel" ? "Disponível" : "Emprestado"}
            </span>
          </td>
        `;
        tbody.appendChild(tr);
      });
    }

    function renderSelectEquipDisponivel() {
      const select = document.getElementById("empEquip");
      select.innerHTML = "";
      const disponiveis = equipamentos.filter(e => e.status === "disponivel");
      if (disponiveis.length === 0) {
        const opt = document.createElement("option");
        opt.value = "";
        opt.textContent = "Nenhum equipamento disponível";
        select.appendChild(opt);
        select.disabled = true;
      } else {
        select.disabled = false;
        const optVazio = document.createElement("option");
        optVazio.value = "";
        optVazio.textContent = "Selecione...";
        select.appendChild(optVazio);
        disponiveis.forEach(e => {
          const opt = document.createElement("option");
          opt.value = e.id;
          opt.textContent = `${e.nome} (${e.serie})`;
          select.appendChild(opt);
        });
      }
    }

    function renderTabelaEmprestados() {
      const tbody = document.querySelector("#tabelaEmprestados tbody");
      tbody.innerHTML = "";

      movimentacoes
        .filter(m => m.tipo === "emprestimo" && !m.dataDevolucao)
        .forEach(m => {
          const equip = equipamentos.find(e => e.id === m.equipId);
          const tr = document.createElement("tr");
          tr.innerHTML = `
            <td>${equip ? equip.nome : "-"}</td>
            <td>${m.colaborador}</td>
            <td>${m.dataSaida || "-"}</td>
            <td>${m.obs || "-"}</td>
            <td>
              <button class="btn-secondary" onclick="registrarDevolucao('${m.id}')">Devolver</button>
            </td>
          `;
          tbody.appendChild(tr);
        });
    }

    function renderTabelaMovimentacoes() {
      const tbody = document.querySelector("#tabelaMov tbody");
      tbody.innerHTML = "";
      // ordena da mais recente para mais antiga
      const ordenado = [...movimentacoes].sort((a, b) => new Date(b.dataRegistro) - new Date(a.dataRegistro));
      ordenado.forEach(m => {
        const equip = equipamentos.find(e => e.id === m.equipId);
        const tr = document.createElement("tr");
        tr.innerHTML = `
          <td>${m.dataRegistro.split("T")[0] || "-"}</td>
          <td>${equip ? equip.nome : "-"}</td>
          <td>${m.colaborador || "-"}</td>
          <td>
            <span class="tag">
              ${m.tipo === "emprestimo" ? "Empréstimo" : "Devolução"}
            </span>
          </td>
          <td>${m.obs || "-"}</td>
        `;
        tbody.appendChild(tr);
      });
    }

    function atualizarTudo() {
      atualizarDashboard();
      renderTabelaEquip();
      renderSelectEquipDisponivel();
      renderTabelaEmprestados();
      renderTabelaMovimentacoes();
    }

    // ------- AÇÕES -------
    function handleCadastroEquipamento(event) {
      event.preventDefault();
      const nome = document.getElementById("equipNome").value.trim();
      const serie = document.getElementById("equipSerie").value.trim();
      const categoria = document.getElementById("equipCategoria").value.trim();
      const local = document.getElementById("equipLocal").value.trim();

      if (!nome || !serie) {
        alert("Preencha nome e número de série.");
        return;
      }

      const novo = {
        id: "eq_" + Date.now(),
        nome,
        serie,
        categoria,
        local,
        status: "disponivel"
      };

      equipamentos.push(novo);
      salvarDados();
      atualizarTudo();

      document.getElementById("formEquip").reset();
      alert("Equipamento cadastrado com sucesso!");
    }

    function handleRegistrarEmprestimo(event) {
      event.preventDefault();
      const equipId = document.getElementById("empEquip").value;
      const colab = document.getElementById("empColab").value.trim();
      const dataSaida = document.getElementById("empDataSaida").value;
      const obs = document.getElementById("empObs").value.trim();

      if (!equipId) {
        alert("Selecione um equipamento.");
        return;
      }
      if (!colab) {
        alert("Informe o colaborador.");
        return;
      }

      const equip = equipamentos.find(e => e.id === equipId);
      if (!equip || equip.status !== "disponivel") {
        alert("Equipamento não disponível.");
        return;
      }

      const mov = {
        id: "mv_" + Date.now(),
        equipId,
        colaborador: colab,
        tipo: "emprestimo",
        dataSaida: dataSaida || new Date().toISOString().slice(0,10),
        dataDevolucao: null,
        obs,
        dataRegistro: new Date().toISOString()
      };

      movimentacoes.push(mov);
      equip.status = "emprestado";
      salvarDados();
      atualizarTudo();

      document.getElementById("formEmprestimo").reset();
      alert("Empréstimo registrado!");
    }

    // chamada pelo botão
    function registrarDevolucao(movId) {
      const mov = movimentacoes.find(m => m.id === movId);
      if (!mov || mov.dataDevolucao) return;

      const equip = equipamentos.find(e => e.id === mov.equipId);
      if (!equip) return;

      // registra devolução
      mov.dataDevolucao = new Date().toISOString().slice(0,10);
      mov.dataRegistro = new Date().toISOString(); // atualiza para aparecer no topo
      mov.tipo = "devolucao";

      equip.status = "disponivel";
      salvarDados();
      atualizarTudo();
      alert("Devolução registrada!");
    }

    // ------- ABAS -------
    function configurarAbas() {
      const tabs = document.querySelectorAll(".tab-btn");
      const sections = document.querySelectorAll(".section");

      tabs.forEach(btn => {
        btn.addEventListener("click", () => {
          const alvo = btn.dataset.tab;
          tabs.forEach(b => b.classList.remove("active"));
          btn.classList.add("active");
          sections.forEach(sec => {
            sec.classList.toggle("active", sec.id === alvo);
          });
        });
      });
    }

    // ------- INICIALIZAÇÃO -------
    document.addEventListener("DOMContentLoaded", () => {
      carregarDados();
      configurarAbas();
      atualizarTudo();

      document.getElementById("formEquip").addEventListener("submit", handleCadastroEquipamento);
      document.getElementById("formEmprestimo").addEventListener("submit", handleRegistrarEmprestimo);
    });
  </script>
</body>
</html>

